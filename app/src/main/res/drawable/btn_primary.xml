<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/primary_dark">
    <!-- focused -->
    <item android:state_focused="true">

        <shape>
            <gradient
                android:angle="270"
                android:endColor="@color/primary_dark"
                android:startColor="@color/primary_dark" />
            <corners android:radius="6dp" />
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
        </shape>
    </item>
    <!-- pressed -->
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="270"
                android:endColor="@color/primary_dark"
                android:startColor="@color/primary_dark" />
            <corners android:radius="6dp" />
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
        </shape>
    </item>
    <!-- selected-->
    <item android:state_selected="true">
        <shape>
            <gradient
                android:angle="270"
                android:endColor="@color/primary_dark"
                android:startColor="@color/primary_dark" />
            <corners android:radius="6dp" />
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
        </shape>
    </item>

    <!-- default -->
    <item>
        <shape>
            <gradient
                android:angle="270"
                android:endColor="@color/primary_dark"
                android:startColor="@color/primary_dark" />
            <corners android:radius="6dp" />
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
        </shape>
    </item>
</ripple>
